
@{
    ViewBag.Title = "CambiarClave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>.</p>
<form  role="form" action="@Url.Action("CambiarClave")" method="Post">
    <fieldset>
        <legend>Actualizar Clave</legend>
        <h3>Desea cambiar la clave del usuario <strong> @ViewBag.NombreUsuario </strong> ? </h3>
        <br />

        <div class="form-group">
            <label class="col-sm-2 control-label">Clave Actual</label>
            <div class="col-sm-10">
                <input type="password" name="ClaveActual" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Clave Nueva</label>
            <div class="col-sm-10">
                <input type="password" name="ClaveNueva" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Confirmar Clave Nueva:</label>
            <div class="col-sm-10">
                <input type="password" name="Confirmar" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Cambiar Clave" /> | <input type="button" value="Cancelar" onclick="location.href='@Url.Action("Index", "Usuario")'" />
            </div>
        </div>
        <br />
    </fieldset>
</form>

