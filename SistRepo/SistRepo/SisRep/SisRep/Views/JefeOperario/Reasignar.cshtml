@model SisRep.Models.reposicione

@{
    ViewBag.Title = "Reasignar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reasignar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>reposicione</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idReposicion)

        <div class="form-group">
            @Html.LabelFor(model => model.idOperario, "idOperario", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idOperario", String.Empty)
                @Html.ValidationMessageFor(model => model.idOperario)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index2")
</div>
