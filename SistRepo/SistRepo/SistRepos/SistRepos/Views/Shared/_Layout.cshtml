<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link href="http://bootswatch.com/spacelab/bootstrap.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/Tower.ico">
</head>

<body>
    <header>

        <div class="row" style="background-color: #eee; border-bottom: 1px dotted #8A8575; ">
            <div class="col-md-4 col-md-offset-4"><h1>Sistema de Reposiciones</h1></div>
        </div>

            @if (Session["UsuarioLogueado"] != null)
            {
                <div class="navbar navbar-inverse">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/LogIn/Empty">Inicio</a>
                    </div>


                    <div class="navbar-collapse collapse navbar-responsive-collapse">
                        <ul class="nav navbar-nav">
                            @if (Session["Rol"] == "jop")
                            {
                                <li>@Html.ActionLink("Lista de Operarios", "Index", "JefeOperario")</li>
                                <li>@Html.ActionLink("Solicitudes Activas", "Index2", "JefeOperario")</li>
                                <li>@Html.ActionLink("Solicitudes en Tratamiento", "Index4", "JefeOperario")</li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Búsquedas <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Solicitudes Finalizadas por Operario", "Index3", "JefeOperario")</li>
                                        <li>@Html.ActionLink("Solicitudes del mes", "Index5", "JefeOperario")</li>
                                        <li>@Html.ActionLink("Solicitudes por ID", "Index7", "JefeOperario")</li>
                                    </ul>
                                </li>



                            }
                            @if (Session["Rol"] == "jso")
                            {
                                <li>@Html.ActionLink("Lista de Solicitantes", "Index", "JefeSolicitante")</li>
                                <li>@Html.ActionLink("Solicitudes Activas", "Index2", "JefeSolicitante")</li>
                                <li>@Html.ActionLink("Solicitudes por Solicitante", "Index3", "JefeSolicitante")</li>
                                <li>@Html.ActionLink("Solicitudes por ID", "Index7", "JefeSolicitante")</li>
                            }
                            @if (Session["Rol"] == "ope")
                            {
                                <li>@Html.ActionLink("Solicitudes Activas", "Index3", "Operario")</li>
                                <li>@Html.ActionLink("Solicitudes del mes", "Index", "Operario")</li>
                                <li>@Html.ActionLink("Ultimas solicitudes resueltas", "Index2", "Operario")</li>
                            }
                            @if (Session["Rol"] == "sol")
                            {
                                <li>@Html.ActionLink("Cargar Solicitudes", "Create", "Solicitante")</li>
                                <li>@Html.ActionLink("Consultar Solicitudes Activas", "Index", "Solicitante")</li>
                                <li>@Html.ActionLink("Consultar Solicitudes Finalizadas", "Index2", "Solicitante")</li>
                            }
                            @if (Session["Rol"] == "usr")
                            {
                                <li>@Html.ActionLink("Lista Usuarios", "Index", "Usuario")</li>
                                <li>@Html.ActionLink("Cargar Usuarios", "Create", "Usuario")</li>
                            }
                            @if (Session["Rol"] == "ger")
                            {
                                
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Herramientas <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Stock", "Herr", "Gerencia")</li>
                                        <li>@Html.ActionLink("Tiempos", "Herr2", "Gerencia")</li>
                                        <li>@Html.ActionLink("Cargar Herramienta", "CargarH", "Gerencia")</li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Reportes <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Solicitudes por Operario o Solicitante", "Index5", "Gerencia")</li>
                                        <li>@Html.ActionLink("Solicitudes canceladas", "Index2", "Gerencia")</li>
                                        <li>@Html.ActionLink("Solicitudes tratadas fuera de tiempo", "Index3", "Gerencia")</li>
                                        <li>@Html.ActionLink("Mayor desvio y porcentaje fuera de tiempo por operarios", "Index4", "Gerencia")</li>
                                        <li>@Html.ActionLink("Porcentaje fuera de tiempo por supervisor", "Index6", "Gerencia")</li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Cambiar Clave", "CambiarClave", "Usuario")</li>
                            <li>@Html.ActionLink("Cerrar sesion", "CerrarSesion", "Usuario", null, new { onclick = "return confirm('Cerrar?');" }) </li>
                        </ul>
                    </div>
                </div>
            }
            else {
            <div class="navbar navbar-inverse">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/LogIn/Index">Log In</a>
                    </div>
                </div>
            }
    </header>
    <br />


    <div id="body">
        @RenderBody()
    </div>  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"></script>

    <script>
        function funcImprimir() {
            formulario.target = "_blank";
        }
        function funcImprimirNot() {
            formulario.target = "_self";
        } </script>
</body>
</html>
