@model SistRepos.Models.reposiciones

@{
    ViewBag.Title = "Sistema de Reposiciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form role="form" action="@Url.Action("Reasignar")" method="Post" class="form-horizontal">
    <input type="hidden" value="@Model.idReposicion" name="idReposicion" />
    <div class="form-group">
        <div class="col-lg-3"></div>
        <div class="col-lg-4">
            <fieldset>
                <legend>Reasignar</legend>
                <div class="form-group">
                    <label for="nombre" class="col-lg-4 control-label">Elija el Operario</label>
                    <div class="col-lg-8">
                        @Html.DropDownList("idOperario", null, String.Empty, new { @class = "form-control" }) 
                        @Html.ValidationMessageFor(model => model.idOperario)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-2"><a href="javascript:history.back(-1);" class="btn btn-danger" role="button">Cancelar</a></div>
                    <div class="col-lg-2">
                        <input type="submit" value="Confirmar" class="btn btn-default" />
                    </div>
                </div>
</fieldset>
        </div>
    </div>
</form>






