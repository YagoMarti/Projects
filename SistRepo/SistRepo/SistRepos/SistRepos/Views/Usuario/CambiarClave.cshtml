@{
    ViewBag.Title = "Sistema de Reposiciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form role="form" action="@Url.Action("CambiarClave")" method="Post" class="form-horizontal">
    <div class="form-group">
        <div class="col-lg-3"></div>
        <div class="col-lg-4">
            <fieldset>
                <legend>Bienvenido <strong> @ViewBag.NombreUsuario </strong>, desea cambiar su clave ?</legend>
                <div class="form-group">
                    <label class="col-lg-4 control-label">Clave Actual: </label>
                    <div class="col-lg-8">
                        <input class="form-control" name="ClaveActual" placeholder="ingrese su clave actual" type="password" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label">Clave nueva: </label>
                    <div class="col-lg-8">
                        <input class="form-control" name="ClaveNueva" placeholder="ingrese su nueva clave" type="password" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label">Confirmar clave: </label>
                    <div class="col-lg-8">
                        <input class="form-control" name="Confirmar" placeholder="confirmar nueva clave" type="password" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-2"><a href="javascript:history.back(-1);" class="btn btn-danger" role="button">Cancelar</a></div>
                    <div class="col-lg-2">
                        <input type="submit" value="Cambiar Clave" class="btn btn-default" />
                    </div>
                </div>
                <div class="alert alert-dismissable alert-info">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @ViewBag.aviso
                </div>
            </fieldset>
        </div>
    </div>
</form>


