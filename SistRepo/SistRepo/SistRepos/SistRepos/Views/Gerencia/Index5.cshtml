@model IEnumerable<SistRepos.Models.reposiciones>
@{
    ViewBag.Title = "Sistema de Reposiciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<form role="form" action="@Url.Action("Index5")" method="Post" class="form-horizontal" id="formulario">

    <div class="form-group">
        <div class="col-lg-3"></div>
        <div class="col-lg-4">
            <fieldset>
                <legend>Reposiciones por solicitante u operario</legend>
                <div class="form-group">
                    <label for="nombre" class="col-lg-4 control-label">Elija el Operario: </label>
                    <div class="col-lg-8">
                        @Html.DropDownList("idOperario", null, String.Empty, new { @onchange="soli()" , @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="nombre" class="col-lg-4 control-label"> Elija el Solicitante:</label>
                    <div class="col-lg-8">
                        @Html.DropDownList("idSolicitante", null, String.Empty, new { @onchange = "ope()", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="nombre" class="col-lg-4 control-label"> Fecha desde:</label>
                    <div class="col-lg-8">
                        <input type="date" name="fecha1" min="01-2014" class="form-control" value="@ViewBag.desde">
                    </div>
                </div>
                <div class="form-group">
                    <label for="nombre" class="col-lg-4 control-label"> Fecha hasta:</label>
                    <div class="col-lg-8">
                        <input type="date" name="fecha2" min="01-2014" class="form-control" value="@ViewBag.hasta">
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-lg-2 col-lg-offset-4"><input type="submit" name="print" value="Consultar" onclick="funcImprimirNot()"  class="btn btn-default" /></div>
                    @if (Model != null)
                    {
                        <div class="col-lg-2 col-lg-offset-4">
                            <input type="submit" class="btn btn-default" name="print" value="Imprimir" onclick="funcImprimir()" />

                        </div> }
                </div>
            </fieldset>
        </div>
    </div>
</form>

@if (Model != null)
{
   <table class="table table-striped table-hover ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.horaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaAsignacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaResolucion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estados.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.herramientas.herramienta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.puestos.puesto)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.horaCreacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horaAsignacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horaResolucion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estados.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.herramientas.herramienta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.puestos.puesto)
                </td>
            </tr>
        }

    </table>
}



    <script>
    function soli()
    {
        $('#idSolicitante').val(null);
    }
    function ope() {
        $('#idOperario').val(null);
    }
    </script>